# Docker Environment Configuration
# Environment-specific settings for SloughGPT Docker deployments

# Database Configuration
DB_PASSWORD=sloughgpt123
DATABASE_URL=postgresql://sloughgpt:sloughgpt123@postgres:5432/sloughgpt

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Application Configuration
SLAUGHGPT_ENV=production
SLAUGHGPT_LOG_LEVEL=INFO
SLAUGHGPT_HOST=0.0.0.0
SLAUGHGPT_PORT=8000
DEBUG=false
WORKERS=4

# Security Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
API_KEY_SECRET=your-super-secret-api-key-change-this-in-production
ENCRYPTION_KEY=your-32-character-encryption-key-here
ENABLE_AUTH=true
API_KEY_HEADER=X-API-Key

# Model Configuration
SLAUGHGPT_MODEL_PATH=/app/models
SLAUGHGPT_DATA_PATH=/app/data
SLAUGHGPT_CACHE_PATH=/app/cache
SLAUGHGPT_CHECKPOINT_PATH=/app/checkpoints
MODEL_PATH=models/slogpt.pt
MODEL_CONTEXT_SIZE=2048
MODEL_BATCH_SIZE=8
MODEL_MAX_TOKENS=1024

# Performance Configuration
MAX_WORKERS=4
WORKER_TIMEOUT=300
KEEP_ALIVE=2
REQUEST_TIMEOUT=30
MAX_CONCURRENT_REQUESTS=100
ENABLE_REQUEST_BATCHING=true
BATCH_SIZE=4
BATCH_TIMEOUT=0.1

# GPU Configuration
CUDA_VISIBLE_DEVICES=0
GPU_ENABLED=false

# Monitoring Configuration
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
GRAFANA_PORT=3000
GRAFANA_PASSWORD=admin123

# Logging Configuration
LOG_FORMAT=json
LOG_LEVEL=INFO
LOG_FILE=/app/logs/sloughgpt.log
LOG_ROTATION=daily
LOG_RETENTION=30

# Security Headers
SECURE_HEADERS=true
CORS_ENABLED=true
CORS_ORIGINS=*
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# SSL/TLS Configuration
SSL_ENABLED=false
SSL_CERT_PATH=/etc/ssl/certs/sloughgpt.crt
SSL_KEY_PATH=/etc/ssl/private/sloughgpt.key

# Development Configuration (override for dev env)
SLAUGHGPT_RELOAD=false
SLAUGHGPT_DEBUG=false
AUTO_RELOAD=false
ENABLE_DOCS=true

# Testing Configuration
TESTING=false
TEST_DATABASE_URL=sqlite:///:memory:
TEST_REDIS_URL=redis://localhost:6379/1

# Feature Flags
ENABLE_METRICS=true
ENABLE_TRACING=false
ENABLE_PROFILING=false
ENABLE_HEALTH_CHECKS=true

# Resource Limits
MAX_MEMORY_USAGE=4096
MAX_CPU_USAGE=200
MAX_CONCURRENT_REQUESTS=1000

# Cache Settings
CACHE_TTL=3600
ENABLE_CACHE=true
DATASET_CACHE_SIZE=1000

# External Service Configuration
OPENAI_API_KEY=your-openai-api-key
HUGGINGFACE_TOKEN=your-huggingface-token

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7
BACKUP_PATH=/app/backups

# Dataset Settings
DATASET_PATH=data/datasets